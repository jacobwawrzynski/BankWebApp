@using BankSystem.Data
@model TransferViewModel

@{
    ViewData["Title"] = "Transfer dollars";
}
@{
    var context = new ApplicationDbContext();
    var client = context.Clients.Where(c => c.Email == User.Identity.Name).FirstOrDefault();
    var clientAccount = context.Client_Accounts.Where(ca => ca.Client_ID == client.Id).Select(a => a.AccountID).FirstOrDefault();
    var accountNumber = context.DollarAccounts.Where(da => da.Id == clientAccount).Select(da => da.AccountNumber);
}

<section class="section">
    <div class="row">
    
        <form asp-action="Transfer" name="TransferForm" id="transfer-form">
            <div class="card">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating mb-3">
                        <label asp-for="Title" class="floating-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <label asp-for="Amount" class="floating-label"></label>
                        <input asp-for="Amount" class="form-control" />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <label asp-for="BeneficiaryName" class="floating-label"></label>
                        <input asp-for="BeneficiaryName" class="form-control" />
                        <span asp-validation-for="BeneficiaryName" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <label asp-for="Date" class="floating-label"></label>
                        <input asp-for="Date" class="form-control" value="@DateTime.Now" readonly/>
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <label asp-for="Address" class="floating-label"></label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <label asp-for="FromAccountNumber" class="floating-label"></label>
                        <input asp-for="FromAccountNumber" class="form-control" value="@accountNumber" readonly/>
                        <span asp-validation-for="FromAccountNumber" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <label asp-for="Currency" class="floating-label"></label>
                        <input asp-for="Currency" class="form-control" value="@Currency.Dollar" readonly />
                        <span asp-validation-for="Currency" class="text-danger"></span>
                    </div>
                    
                    <div class="form-floating mb-3">
                        <input id="transfer-submit" type="submit" value="Send" class="w-100 btn btn-lg btn-info" />
                    </div>
                    <div class="form-floating mb-3">
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    </div>
                </div>
                
            </div>
            
        </form>
    
    </div>
</section>


<div>
    <a asp-action="History">Back to History</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
